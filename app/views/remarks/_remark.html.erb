<div id="<%= dom_id  %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= .title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Details:</strong>
    <%= .details %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= .location_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ", , class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this ", edit__path(), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
