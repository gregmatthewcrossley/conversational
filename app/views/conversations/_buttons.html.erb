<div data-controller="conversation" id="buttons">
  <% if conversation.started? %>
    <button data-action="click->conversation#end" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Stop</button>
  <% else %>
    <button data-action="click->conversation#start" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Start</button>
  <% end %>
</div>